extends ../layout/base 

block content
    div.content-header
        .container-fluid
            .row.mb-2
                .col-sm-6
                    h1 #{title}
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/') Home
                        li.breadcrumb-item 
                            a(href='/promotion/index') Discount Code
                        li.breadcrumb-item.active Create

    section.content
        div.container-fluid
            div.row
                div.col-12
                    div.card
                        div.card-body
                            form(action="/promotion/store" method="post")
                                input(type="hidden" name="_csrf" value=_csrf)
                                input(type="hidden" name="user_id" value=req.user.id)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="name") Name
                                            input.form-control#name(name='name' placeholder='Enter Name' required)
                                    div.col-6
                                        div.form-group
                                            label(for="status") Status
                                            select.form-control#status(name="status" required)
                                                option(value="") --- Select Status ---
                                                option(value="1") Active
                                                option(value="0") Inactive
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="discount_type") Discount Type
                                            select.form-control#discount_type(name="discount_type" required)
                                                option(value="") --- Select Discount Type ---
                                                option(value="1") Percentage
                                                option(value="2") Fixed
                                    div.col-6
                                        div.form-group
                                            label(for="rate") Rate
                                            input.form-control#rate(type='number' name='rate' placeholder='Enter Rate' min=0 step=.01)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="min_spending") Minimum Spending
                                            input.form-control#min_spending(name='min_spending' placeholder="Enter Minimum Spending" min=.01 step=.01)
                                    div.col-6
                                        div.form-group
                                            label(for="capped_at") Capped
                                            input.form-control#capped_at(type='number' name='capped_at' placeholder='Enter Capped' min=0 step=.01)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="start_date") Start Date
                                            input.form-control#start_date(type='date' name='start_date')
                                    div.col-6
                                        div.form-group
                                            label(for="end_date") End Date
                                            input.form-control#end_date(type='date' name='end_date')
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="code") Discount Code
                                            input.form-control#code(name='code' placeholder="Enter Discount Code")
                                div.row
                                    div.col-12.text-right
                                        a(href="/promotion/index").mr-2
                                            button.btn.btn-secondary(type='button') Back
                                        button.btn.btn-success(type='submit') Submit