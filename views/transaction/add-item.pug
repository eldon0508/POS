div.row
    each prod in products
        div.col-12.col-sm-6.col-md-4.d-flex.align-items-stretch.flex-column
            form(action="/transaction/" + result.id + "/addItem" method="post")
                input(type="hidden" name="transaction_id" value=result.id)
                input(type="hidden" name="product_id" value=prod.id)
                .card.bg-light.d-flex.flex-fill
                    .card-header.text-muted.border-bottom-0
                        .card-body.pt-0
                            .row
                                .col-7
                                    h2.lead
                                        b #{prod.name}
                                    p.text-muted.text-sm
                                        b Description: 
                                        |  #{prod.description}
                                    ul.ml-4.mb-0.fa-ul.text-muted
                                        li.small
                                            span.fa-li
                                                i.fas.fa-lg.fa-building
                                            |  Stock: #{prod.unit_price}
                                .col-5.text-center
                                    img.img-circle.img-fluid(src='../../dist/img/user1-128x128.jpg' alt='user-avatar')
                        .card-footer
                            .row
                                .col-6
                                    div.form-group
                                            label 
                                                small Quantity
                                            input#quantity.form-control(type="number" name="quantity")
                                .col-6
                                    .text-right
                                        button.btn.btn-success.float-right(type='submit')
                                            i.fas.fa-user  Add