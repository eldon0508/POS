extends ../layout/base

block content
    div.content-header
        .container-fluid
            .row.mb-2
                .col-sm-6
                    h1 #{title}
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/') Home
                        li.breadcrumb-item
                            a(href='/transaction/index') Transaction
                        li.breadcrumb-item.active Create

    section.content
        div.container-fluid
            div.row
                div.col-12
                    div.card
                        div.card-body
                            form(action="/transaction/store" method="post")
                                input(type="hidden" name="_csrf" value=_csrf)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="customer_id") Customer
                                            select.select2.form-control#customer_id(name="customer_id" required)
                                                option(value="") --- Select Customer ---
                                                each customer in customers
                                                    option(value=customer.id) #{customer.first_name} #{customer.last_name}
                                div.row
                                    .col-6
                                        a.btn.btn-info.mx-2(href="/transaction/guestCheckout") Guest Checkout
                                    div.col-6.text-right
                                        a(href="/transaction/index")
                                            button.btn.btn-secondary.mx-2(type='button') Back
                                        button.btn.btn-success(type='submit') Submit