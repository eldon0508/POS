extends ../layout/base 

block content
    div.content-header
        div.container-fluid
            div.row.mb-2.mt-3
                div.col-12
                    h1.m-0
                        | #{title}

    section.content
        div.container-fluid
            div.row
                div.col-12
                    div.card
                        div.card-body
                            form(action="/category/update/" + result.id method="post")
                                input(type="hidden" name="_csrf" value=_csrf)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label
                                                | Name #{result.name}
                                            input.form-control#name(type='text' value=result.name name='name' placeholder='Enter Name' required)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label
                                                | Description
                                            textarea.form-control#description(name="description")
                                                | #{result.description}
                                input(type="hidden" name="id" value=result.id)
                                div.row
                                    div.col-12.text-right
                                        a(href="/category/index").mr-2
                                            button.btn.btn-secondary(type='button')
                                                | Back
                                        button.btn.btn-primary(type='submit')
                                            | Submit