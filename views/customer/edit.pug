extends ../layout/base 

block content
    div.content-header
        div.container-fluid
            div.row.mb-2.mt-3
                div.col-12
                    h1.m-0
                        | #{title}

    section.content
        div.container-fluid
            div.row
                div.col-12
                    div.card
                        div.card-body
                            form(action="/customer/update/" + result.id method="post")
                                input(type="hidden" name="_csrf" value=_csrf)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label
                                                | First Name #{result.name}
                                            input.form-control#name(type='text' value=result.name name='first_name' placeholder='Enter First Name' required)
                                    div.col-6
                                        div.form-group
                                            label
                                                | Last Name
                                            input.form-control#name(type='text' value=result.name name='last_name' placeholder='Enter Last Name' required)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label
                                                | Date of Birth
                                            <input class="form-control" id="dob" type="date" name="dob" placeholder="Enter Date of Birth" required>
                                    div.col-6
                                        div.form-group
                                            label
                                                | Address
                                            input.form-control#name(type='text' value=result.name name='address' placeholder='Enter Address' required)
                                div.row
                                    div.col-12.text-right
                                        a(href="/customer/index").mr-2
                                            button.btn.btn-secondary(type='button')
                                                | Back
                                        button.btn.btn-primary(type='submit')
                                            | Submit