extends ../layout/base 

block content
    div.content-header
        .container-fluid
            .row.mb-2
                .col-sm-6
                    h1 #{title}
                .col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href='/transaction/index') Home
                        li.breadcrumb-item
                            a(href='/staff/index') Staff
                        li.breadcrumb-item.active Create

    section.content
        div.container-fluid
            div.row
                div.col-12
                    div.card
                        div.card-body
                            form(method="post" action="/staff/store")
                                input(type="hidden" name="_csrf" value=_csrf)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="username") Username
                                            input.form-control#username(name='username' placeholder='Enter Username' required)
                                    div.col-6
                                        div.form-group
                                            label(for="password") Password
                                            input.form-control#password(type='password' name='password' placeholder='Enter Password' required)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="email") Email
                                            input.form-control#email(type='email' name='email' placeholder='Enter Email' required)
                                    div.col-6
                                        div.form-group
                                            label(for="role") Role
                                            select.form-control#role(name="role" required)
                                                option(value="") --- Select Role ---
                                                option(value="1") Manager 
                                                option(value="2") Staff
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="first_name") First Name
                                            input.form-control#first_name(name='first_name' placeholder='Enter First Name' required)
                                    div.col-6
                                        div.form-group
                                            label(for="last_name") Last Name
                                            input.form-control#last_name(name='last_name' placeholder='Enter Last Name' required)
                                div.row
                                    div.col-6
                                        div.form-group
                                            label(for="address") Address
                                            input.form-control#address(name='address' placeholder='Enter Address' required)
                                    div.col-6
                                        div.form-group
                                            label(for="dob") Date of Birth
                                            input.form-control#dob(type='date' max=new Date().toISOString().split('T')[0] name='dob' placeholder='Enter Date of Birth' required)
                                div.row
                                    div.col-12.text-right
                                        a(href="/staff/index").mr-2
                                            button.btn.btn-secondary(type='button') Back
                                        button.btn.btn-success(type='submit') Submit
