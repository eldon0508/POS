aside.main-sidebar.sidebar-dark-indigo.elevation-4
	a.brand-link(href="/")
		img.brand-image.img-circle.elevation-3(src="/adminlte/dist/img/AdminLTELogo.png" alt="AdminLTE Logo")
		span.brand-text.font-weight-light
			| Pos System
	div.sidebar
		div.user-panel.mt-3.pb-3.mb-3.d-flex
			div.image
				img.img-circle.elevation-2(src="/adminlte/dist/img/user2-160x160.jpg" alt="User image")
			div.info
				a.d-block(href="/profile")
					| #{req.user.username}
		nav.mt-2
			ul.nav.nav-pills.nav-sidebar.flex-column.nav-child-indent(data-widget="treeview" role="menu" data-accordion="false")
				if(req.user.role == 1)
					li.nav-item
						a.nav-link(href="/category/index")
							i.nav-icon.fas.fa-list
							p Category
					li.nav-item
						a.nav-link(href="/product/index")
							i.nav-icon.fas.fa-box
							p Product
					li.nav-item
						a.nav-link(href="/staff/index")
							i.nav-icon.fas.fa-user-shield
							p Staff
					li.nav-item
						a.nav-link(href="/customer/index")
							i.nav-icon.fas.fa-users
							p Customer
					li.nav-item
						a.nav-link(href="#")
							i.nav-icon.fas.fa-balance-scale
							p Promotion
							i.fas.fa-angle-left.right
						ul.nav.nav-treeview
							li.nav-item 
								a.nav-link(href="/promotion/cart-discount")
									i.nav-icon.fas.fa-shopping-cart
									p Cart Discount
							li.nav-item 
								a.nav-link(href="/promotion/index")
									i.nav-icon.fas.fa-certificate
									p Discount Code
					li.nav-item
						a.nav-link(href="#")
							i.nav-icon.fab.fa-adversal
							p Transaction
							i.fas.fa-angle-left.right
						ul.nav.nav-treeview
							li.nav-item 
								a.nav-link(href="/transaction/index")
									i.nav-icon.fas.fa-stream
									p List
							li.nav-item 
								//- a.nav-link(href="/transaction/summary")
								a.nav-link(href="/transaction/summary")
									i.nav-icon.fas.fa-chart-area
									p Summary
				else
					li.nav-item
						a.nav-link(href="/customer/index")
							i.nav-icon.fas.fa-users
							p Customer
					li.nav-item
						a.nav-link(href="/transaction/index")
							i.nav-icon.fas.fa-shopping-cart
							p Transaction